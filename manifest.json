{
  "manifest_version": 3,
  "name": "Sort Amazon By Ratings score",
  "short_name": "AMZ Sort Rev",
  "version": "1",
  "description": "You can now sort Amazonâ„¢ search results using my unique algorithm.",
  "author": "Mohamed Oun",
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.fr/*",
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.it/*",
        "*://*.amazon.in/*",
        "*://*.amazon.eg/*",
        "*://*.amazon.es/*",
        "*://*.amazon.cn/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.br/*",
        "*://*.amazon.de/*",
        "*://*.amazon.com.au/*"
      ],
      "run_at": "document_idle",
      "js": ["sort-by-rating.js"]
    }
  ],
  "permissions": ["scripting", "tabs", "offscreen"],
  "host_permissions": [
    "*://*.amazon.fr/*",
    "*://*.amazon.com/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.com.mx/*",
    "*://*.amazon.co.jp/*",
    "*://*.amazon.it/*",
    "*://*.amazon.in/*",
    "*://*.amazon.eg/*",
    "*://*.amazon.es/*",
    "*://*.amazon.cn/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.br/*",
    "*://*.amazon.de/*",
    "*://*.amazon.com.au/*"
  ],
  "icons": {
    "16": "images/16.png",
    "24": "images/24.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png",
    "512": "images/icon512.png"
  }
}
