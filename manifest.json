{
  "manifest_version": 2,
  "name": "Sort Amazon By Ratings score",
  "short_name": "AMZ Sort Rev",
  "version": "1",
  "description": "You can now sort Amazonâ„¢ search results using my unique algorithm.",
  "author": "Mohamed Oun",
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.de/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.de/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.it/*",
